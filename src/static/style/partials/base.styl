html
    min-height 100%
    f-default()

body
    @extend html
    min-width 320px
    background-color #fff
    -webkit-overflow-scrolling touch

// max width for document
.wrapper
    min-height 100vh
    position relative
    max-width 2560px
    margin 0 auto
    box-shadow 0 0 30px rgba(#000, 12%)
    font-size rem(18px)

// box-shadow disable on safari
input[type="text"]
input[type="password"]
input[type="email"]
input[type="tel"]
input[type="url"]
textarea
    -webkit-appearance none
    
*, *:before, *:after
    box-sizing border-box